<h2 class='well'> Subir archivo </h2>

<%= form_tag({:controller => "students", :action => "uploadFiles"}, :method => "post", :multipart => true) do %>
   <%= file_field_tag "archivo", :required => "required" %>
   <%= submit_tag "Subir archivo" %>
<% end %>
<% if @formato_erroneo %>
  <div>
     <p> El formato ingresado es incorrecto. Usted archivos en PDF </p>
  </div>
<% end %>
<p> <%= link_to "Volver a la lista de archivos", :controller => "contributions", :action => "listarArchivoEntrada" %> </p>